{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dune-build",
            "type": "shell",
            "command": "dune build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$ocamlc"
            ]
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "dune runtest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$ocamlc"
            ]
        },
    ]
}
